{
  "name": "plataforma-licitacoes",
  "version": "1.0.0",
  "description": "O Radar PNCP é uma aplicação web desenvolvida em Flask (Python) que atua como uma interface amigável e poderosa para o Portal Nacional de Contratações Públicas (PNCP). O objetivo principal é facilitar a busca, filtragem e acompanhamento de licitações públicas, oferecendo uma experiência de usuário superior à do portal oficial.",
  "main": "index.js",
  "scripts": {
    "build:css": "sass src/scss:static/dist",
    "watch:css": "npm run build:css -- --watch",
    
    "build:js": "esbuild src/js/main.js --bundle --outfile=static/dist/main.js",
    "watch:js": "npm run build:js -- --watch",
    
    "start:flask": "nodemon app.py",
    "dev": "concurrently \"npm:watch:*\" \"npm:start:flask\"",

    "build:prod": "sass src/scss:static/dist --style=compressed && esbuild src/js/main.js --bundle --outfile=static/dist/main.js --minify"
},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BroJhonson/plataforma-licitacoes.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BroJhonson/plataforma-licitacoes/issues"
  },
  "homepage": "https://github.com/BroJhonson/plataforma-licitacoes#readme",
  "devDependencies": {
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.8",
    "nodemon": "^3.1.10",
    "sass": "^1.90.0"
  }
}
